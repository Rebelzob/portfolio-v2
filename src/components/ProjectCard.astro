---
interface ProjectCardProps {
  title: string;
  description: string;
  link: string;
}

const ProjectCard: Astro.Component<ProjectCardProps> = (props) => {
  return (
    <div class="bg-white shadow-md rounded p-6 my-4">
      <h3 class="text-xl font-bold mb-2">{props.title}</h3>
      <p class="text-gray-700">{props.description}</p>
      <a href={props.link} class="text-blue-500 hover:underline mt-2 inline-block">View Project</a>
    </div>
  );
};
---
<ProjectCard {title} {description} {link} />